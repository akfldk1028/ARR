  "django": {
    "agent_type": "specialist",
    "worker_class": "HotelSpecialistWorkerAgent",
    "model_config": {
      "provider": "openai",
      "model_name": "gpt-3.5-turbo",
      "temperature": 0.3,
      "max_tokens": 1024
    },
    "specialization_focus": "user_preferences",
    "expertise_areas": [
      "hotel_availability",
      "accommodation_recommendations",
      "pricing_information",
      "room_types",
      "location_insights"
    ],
    "routing_config": {
      "specialist_threshold": 0.70,
      "general_threshold": 0.50,
      "confidence_gap_threshold": 0.01
    }
  }
