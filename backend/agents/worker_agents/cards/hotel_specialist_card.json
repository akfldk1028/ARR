        "show me hotels",
        "hotel info",
        "hotel information",
        "I need a hotel",
        "looking for hotel",
        "want to book a hotel",
        "get me a hotel"
      ]
    },
    {
      "id": "accommodation_recommendations",
      "name": "Accommodation Recommendations",
      "description": "Provide accommodation recommendations based on preferences",
      "tags": [
        "recommendation", "suggestions", "accommodation",
